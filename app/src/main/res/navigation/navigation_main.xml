<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_main"
    app:startDestination="@id/navigation_login">

    <include
        android:id="@+id/navigation_home"
        app:graph="@navigation/navigation_home" />

    <include
        android:id="@+id/navigation_login"
        app:graph="@navigation/navigation_login" />

    <include
        android:id="@+id/navigation_discover"
        app:graph="@navigation/navigation_discover" />

    <action
        android:id="@+id/action_global_navigation_discover"
        app:destination="@id/navigation_discover" />
    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/navigation_home" />
    <action
        android:id="@+id/action_global_navigation_login"
        app:destination="@id/navigation_login" />
    <action
        android:id="@+id/action_global_navigation_home_inclusive"
        app:destination="@id/navigation_home"
        app:popUpTo="@id/navigation_main"
        app:popUpToInclusive="true" />
</navigation>