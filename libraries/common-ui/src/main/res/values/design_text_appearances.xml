<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/onSurfaceColor_mediumEmphasis</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Headline1">
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Headline1.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Headline2">
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Headline2.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Headline3">
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
        <item name="android:textSize">@dimen/text_size_normal_extended</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Headline3.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Headline4">
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Headline4.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Headline5">
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Headline5.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Headline6">
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Headline6.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.Body.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Body.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.Body.Small.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Body.Tiny">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.Body.Tiny.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/onSurfaceColor_highEmphasis</item>
    </style>

    <style name="TextAppearance.Button.Inverted">
        <item name="android:textColor">@color/text_primary_inverted</item>
    </style>

    <style name="TextAppearance.Action">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/text_action</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>