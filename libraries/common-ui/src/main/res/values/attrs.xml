<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <!-- Text Size -->
        <attr name="textSizeTiny" format="reference" />
        <attr name="textSizeSmall" format="reference" />
        <attr name="textSizeNormal" format="reference" />
        <attr name="textSizeNormalExtended" format="reference" />
        <attr name="textSizeMedium" format="reference" />
        <attr name="textSizeLarge" format="reference" />
        <attr name="textSizeHuge" format="reference" />
        <!-- Spacing -->
        <attr name="spacingTiny" format="reference" />
        <attr name="spacingSmall" format="reference" />
        <attr name="spacingSmallExtended" format="reference" />
        <attr name="spacingNormal" format="reference" />
        <attr name="spacingNormalExtended" format="reference" />
        <attr name="spacingMedium" format="reference" />
        <attr name="spacingMediumExtended" format="reference" />
        <attr name="spacingLarge" format="reference" />
        <attr name="spacingLargeExtended" format="reference" />
        <attr name="spacingHuge" format="reference" />
        <!-- Text styles -->
        <attr name="textAppearanceHeadline1" format="reference" />
        <attr name="textAppearanceHeadline1Inverted" format="reference" />
        <attr name="textAppearanceHeadline2" format="reference" />
        <attr name="textAppearanceHeadline2Inverted" format="reference" />
        <attr name="textAppearanceHeadline3" format="reference" />
        <attr name="textAppearanceHeadline3Inverted" format="reference" />
        <attr name="textAppearanceHeadline4" format="reference" />
        <attr name="textAppearanceHeadline4Inverted" format="reference" />
        <attr name="textAppearanceHeadline5" format="reference" />
        <attr name="textAppearanceHeadline5Inverted" format="reference" />
        <attr name="textAppearanceHeadline6" format="reference" />
        <attr name="textAppearanceHeadline6Inverted" format="reference" />
        <attr name="textAppearanceBody" format="reference" />
        <attr name="textAppearanceBodyInverted" format="reference" />
        <attr name="textAppearanceButton" format="reference" />
        <attr name="textAppearanceButtonInverted" format="reference" />
        <attr name="textAppearanceBodySmall" format="reference" />
        <attr name="textAppearanceBodySmallInverted" format="reference" />
        <attr name="textAppearanceBodyTiny" format="reference" />
        <attr name="textAppearanceBodyTinyInverted" format="reference" />
        <attr name="textAppearanceAction" format="reference" />
        <attr name="textAppearanceSecondary" format="reference" />
        <!-- Colors -->
        <attr name="colorBackground" format="color|reference" />
    </declare-styleable>
    <!-- Custom views -->
    <declare-styleable name="HorizontalGameList">
        <attr name="hgl_title" format="string" />
    </declare-styleable>
    <declare-styleable name="HeaderLayout">
        <attr name="header_title" format="string" />
        <attr name="header_search_enabled" format="boolean" />
        <attr name="header_search_hint" format="string" />
    </declare-styleable>
</resources>