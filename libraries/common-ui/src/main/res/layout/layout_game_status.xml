<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_game_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="?spacingNormal"
        app:cardElevation="0dp"
        tools:cardBackgroundColor="?colorPrimary">

        <TextView
            android:id="@+id/text_game_status"
            style="@style/TextAppearance.Body.Tiny.Inverted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="?spacingSmall"
            android:paddingVertical="?spacingTiny"
            android:textStyle="bold"
            tools:text="Playing" />
    </androidx.cardview.widget.CardView>
</FrameLayout>