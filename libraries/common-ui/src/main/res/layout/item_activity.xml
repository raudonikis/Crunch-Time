<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="?spacingNormal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?spacingSmall">

        <ImageView
            android:id="@+id/activity_image"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/game_placeholder" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/activity_status"
        android:layout_width="match_parent"
        android:layout_height="?spacingTiny"
        android:layout_marginTop="?spacingTiny"
        android:background="@color/colorPrimary" />

</LinearLayout>