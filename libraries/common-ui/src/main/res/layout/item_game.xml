<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/game_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="?spacingSmall"
        android:layout_marginStart="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_title"
        style="?textAppearanceBody"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?spacingNormal"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/game_cover"
        app:layout_constraintTop_toTopOf="@id/game_cover" />

    <TextView
        android:id="@+id/game_description"
        style="?textAppearanceCaption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="?spacingNormal"
        android:layout_marginTop="?spacingTiny"
        android:elegantTextHeight="true"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="@id/game_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/game_cover"
        app:layout_constraintTop_toBottomOf="@id/game_title" />

</androidx.constraintlayout.widget.ConstraintLayout>