<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/headerColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        style="?textAppearanceHeadline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?spacingNormal"
        android:layout_marginTop="?spacingSmall"
        tools:text="Title" />

    <com.raudonikis.common_ui.components.SearchLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?spacingNormal" />

    <View
        android:id="@+id/spacer_search"
        android:layout_width="wrap_content"
        android:layout_height="?spacingNormal" />

</LinearLayout>