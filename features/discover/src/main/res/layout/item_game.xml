<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#808080">

    <ImageView
        android:id="@+id/game_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="?spacingSmall"
        android:layout_marginStart="?spacingSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginHorizontal="?spacingMedium"
        app:layout_constraintStart_toEndOf="@id/game_cover"
        app:layout_constraintTop_toTopOf="@id/game_cover" />

    <TextView
        android:id="@+id/game_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?spacingMedium"
        android:layout_marginTop="?spacingTiny"
        app:layout_constraintStart_toEndOf="@id/game_cover"
        app:layout_constraintTop_toBottomOf="@id/game_title" />

</androidx.constraintlayout.widget.ConstraintLayout>