<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_deal_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="?spacingNormal"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_deal_shop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_steam" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_deal_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="?spacingNormal"
        app:layout_constraintBottom_toBottomOf="@id/card_deal_shop"
        app:layout_constraintStart_toEndOf="@id/card_deal_shop"
        app:layout_constraintTop_toTopOf="@id/card_deal_shop"
        tools:text="Steam" />

    <TextView
        android:id="@+id/text_old_price"
        style="?textAppearanceSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/text_new_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$69.90" />

    <TextView
        android:id="@+id/text_new_price"
        style="?textAppearanceBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_old_price"
        tools:text="$59.90" />

</androidx.constraintlayout.widget.ConstraintLayout>